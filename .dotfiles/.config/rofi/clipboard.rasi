/**
 * –¢–µ–º–∞ –¥–ª—è Cliphist –≤ —Å—Ç–∏–ª–µ –æ–ª–∏–≤–∫–æ–≤–æ–≥–æ Gruvbox
 */

* {
    bg:        #282828e6;
    fg:        #ebdbb2;
    accent:    #d79921;
    border-col:#fe8019;

    background-color: transparent;
    text-color: @fg;
    font: "IBM Plex Mono 12";
}
window {
    width:              40%;
    transparency:       "real";
    background-color:   @bg;
    border:             3px;
    border-color:       @border-col;
    border-radius:      15px;
}

mainbox {
    padding:            15px;
    children:           [ inputbar, listview ];
}

/* –°—Ç—Ä–æ–∫–∞ –ø–æ–∏—Å–∫–∞ —Å –∏–∫–æ–Ω–∫–æ–π üìã */
inputbar {
    margin:             0px 0px 10px 0px;
    padding:            5px;
    children:           [ prompt, entry ];
}

prompt {
    content:            "üìã";
    padding:            0px 10px 0px 5px;
    text-color:         @accent;
}

entry {
    placeholder:        "–ü–æ–∏—Å–∫ –≤ –±—É—Ñ–µ—Ä–µ...";
    placeholder-color:  #fbf1c780;
}

/* –°–ø–∏—Å–æ–∫ —ç–ª–µ–º–µ–Ω—Ç–æ–≤ */
listview {
    columns:            1;
    lines:              8;
    spacing:            5px;
    fixed-height:       false;
}

element {
    padding:            8px 15px;
    border-radius:      8px;
}

/* –í—ã–¥–µ–ª–µ–Ω–Ω—ã–π —ç–ª–µ–º–µ–Ω—Ç (–∫–∞–∫ –Ω–∞ —Å–∫—Ä–∏–Ω—à–æ—Ç–µ) */
element selected {
    background-color:   @accent;
    text-color:         #282828; /* –¢–µ–º–Ω—ã–π —Ç–µ–∫—Å—Ç –Ω–∞ —Å–≤–µ—Ç–ª–æ–º —Ñ–æ–Ω–µ */
}

element-text {
    vertical-align:     0.5;
}
