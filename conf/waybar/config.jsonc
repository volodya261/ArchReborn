[
  {
    "modules-center": [
      "hyprland/workspaces"
    ],
    "modules-left": [
      "custom/cpuinfo",
      "custom/mem",
      "idle_inhibitor"
    ],
    "modules-right": [
      "hyprland/language",
      "backlight",
      "pulseaudio",
      "battery",
      "clock",
      "tray"
    ],
    "position": "top",
    "layer": "bottom",
    "output": "eDP-1",
    "idle_inhibitor": {
        "format": "  {icon}",
        "format-icons": {
            "activated": "ó°…¶ ",
            "deactivated": "ó°›Š ",
        },
     },


    "battery": {
      "format": "{icon} {capacity}%",
      "format-alt": "{time} {icon}",
      "format-charging": "ï‡¦ {capacity}%",
      "format-icons": [
        "ï‰„",
        "ï‰ƒ",
        "ï‰‚",
        "ï‰",
        "ï‰€"
      ],
      "states": {
        "critical": 1,
        "warning": 30
      }
    },

  "clock": {
    "format": "{:%H:%M}",
    "format-alt": "{:%A %d.%m}",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "calendar": {
      "mode": "month",
      "on-scroll": 1,
      "format": {
        "months":   "<span color='#ffead3'><b>{}</b></span>",
        "days":     "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks":    "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today":    "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up":   "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

    "custom/cpuinfo": {
      "exec": "$HOME/.config/waybar/cpuinfo.sh",
      "format": " {}",
      "interval": 5,
      "max-length": 1000,
      "return-type": "json",
      "rotate": 0,
      "tooltip": true
    },
    "height": 24,
    "hyprland/language": {
      "format-en": "ğŸ‡ºğŸ‡¸",
      "format-ru": "ğŸ‡·ğŸ‡º",
      "min-length": 5,
      "tooltip": false
    },
    "hyprland/workspaces": {
      "all-outputs": true,
      "disable-scroll": true,
      "show-special": true,
      "special-visible-only": true

    },
    

    "custom/mem": {
       "format": "  {} ïƒ‰",
       "interval": 5,
       "exec": "free -h | awk '/Mem:/{printf $3}'",
       "tooltip": false
    
    },


    "pulseaudio": {
      "format": "{icon} {volume}%",
      "format-bluetooth": "{icon} {volume}% ïŠ”",
      "format-icons": {
        "car": "ï†¹",
        "default": [
          "ï€§",
          "ï€¨"
        ],
        "handsfree": "ï–",
        "headphones": "ï€¥",
        "headset": "ï–",
        "phone": "ï‚•",
        "portable": "ï‚•"
      },
      "format-muted": "ï€¦",
      "on-click": "pavucontrol"
    },
    "tray": {
      "icon-size": 14,
      "spacing": 1
    },
    "backlight": {
    	"format": "{percent}% {icon} ",
        "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
    }
  }
]
